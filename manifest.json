{
  "manifest_version": 3,
  "name": "crunchy-skip",
  "description": "Automatically clicks 'Skip Intro' / 'Skip Credits' buttons on Crunchyroll player.",
  "version": "0.1.1",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png",
    "512": "icons/icon512.png"
  },
  "options_page": "options.html",
  "host_permissions": [
    "*://*.crunchyroll.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.crunchyroll.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
